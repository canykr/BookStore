@model List<BookStore.Panel.Models.BookViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Bootstrap Example</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <style>
        body {
            background-color: wheat;
            color: black; 
        }
        .navbar {
            margin-bottom: 50px;
            border-radius: 0;
        }


        .jumbotron {
            padding: 10px; 
            margin-bottom: 20px; 
            background: #0000FF; 
            color: #fff; 
        }

        
        footer {
            background-color: #f2f2f2;
            padding: 25px;
        }

        .panel-body img {
            height: 200px; 
            width: 100%;  
            object-fit: contain;
            margin-bottom: 20px;
          
        }

    
        .custom-footer {
            margin-top: 500px; 
        }

     
        
    </style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="jumbotron">
                <div class="container text-center">
                    <h1>Çok Satanlar</h1>
                    <p>Kitaplarla Hayallerinizi Satın Alın!</p>
                </div>
            </div>
        </div>

        <div class="row">
            @if (Model != null)
            {
                @foreach (var book in Model)
                {
                    <div class="col-sm-4">
                        <div class="panel panel-dark">
                            <div class="panel-heading">@book.Name</div>
                            <div class="panel-body">
                                <img src="@Url.Content("~/uploads/books/" + book.ImageUrl)" class="img-responsive" style="width:100%" alt="Image">
                                <p>Kategori: @book.CategoryName</p>
                                <p>Yazar: @book.WriterName</p>
                                <p>Fiyat: @book.Price</p>
                            </div>
                            <div class="panel-footer">Satın al</div>
                        </div>
                    </div>
                }
            }
            else
            {
                <p>No books found.</p>
            }
        </div>
    </div>
    <footer class="border-top footer text-muted layout-footer">
        <div class="container">
            &copy; @DateTime.Now.Year- Kitaplarla Hayallerinizi Satın Alın! - <a asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

</body>
</html>
