@model BookStore.Entities.Writer

@{
    ViewData["Title"] = "Yazar Ekle";
}


<h4>Yazar Ekle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NameSurname" class="control-label"></label>
                <input asp-for="NameSurname" class="form-control" />
                <span asp-validation-for="NameSurname" class="text-danger"></span>
            </div>
           
            <div class="form-group mt-3">
                <a asp-action="Index" class="btn btn-secondary">Yazarlara Geri Dön</a>
                <input type="submit" value="Ekle" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>


